{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "typeRoots": ["./src/typings"],
    "sourceMap": true,
    "removeComments": true,
    "listFiles": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "inlineSources": true
  },
  "exclude": [
    "examples",
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
