{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "typeRoots": ["./src/typings"],
    "sourceMap": true,
    "removeComments": true,
    "listFiles": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./examples",
    "node_modules"
  ],
  "compileOnSave": false
}
